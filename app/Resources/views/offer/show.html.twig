{% embed 'base.html.twig' with {'title': offer.title, 'subtitle': offer.entreprise,
'isFullscreen': 1, 'randomHeaderColors': 1} %}


    {% block body %}

        <div class="container {% if isFullscreen|default(false) %} fullscreen{% endif %}">

            <div class="generic-card {% if isFullscreen %} fullscreen {% endif %}">
                <header>
                    <div><h1>{{ title }}</h1>
                        <p class="subtitle">{{ subtitle }}</p></div>
                </header>
                <div class="content-site {% if isFullscreen %} fullscreen {% endif %}">
                    {% autoescape false %}
                        {% for message_danger in app.session.flashBag.get('danger') %}
                            <div class="alert alert-danger">{{ message_danger }}</div>
                        {% endfor %}
                        {% for message_success in app.session.flashBag.get('success') %}
                            <div class="alert alert-success">{{ message_success }}</div>
                        {% endfor %}

                    {% endautoescape %}

                    <div class="ui grid">
                        <div class="three wide column">
                            <div class="offer-informations clearfix">
                                <img class="offer-image right floated" src="{% if offer.imageUrl %}{{ base_upload_url }}{{ vich_uploader_asset(offer, "imageFile") }}{% else %}{{ asset("img/offers/default.png") }}{% endif %}" alt="">
                                <ul class="datas">
                                    <li><strong>Entreprise : </strong>{{ offer.entreprise }}</li>
                                    <li><strong>Durée : </strong>{{ offer.duree }}</li>
                                    <li><strong>Rémunération : </strong>{{ offer.remuneration }} €</li>
                                    <li><strong>Contrat : </strong>{{ offer.typeContrat }}</li>
                                    <li><strong>Secteur : </strong>{{ offer.secteur }}</li>
                                    <li><strong>{{ offer.nbPost }}</strong> poste{% if offer.nbPost > 1 %}s{% endif %} à pourvoir</li>
                                    <li><strong><i class="fa fa-envelope">&nbsp;&nbsp;</i> </strong><a href="mailto:{{ offer.contact }}">{{ offer.contact }}</a></li>
                                    <li><strong><i class="fa fa-map-marker">&nbsp;&nbsp;</i> </strong>{{ offer.localisation }}</li>


                                </ul>

                                {% if app.user and not offer.hasPostuled(app.user) %}
                                    <a class="btn btn-success btn-medium" href="{{ path('offer_apply', {'id': offer.id }) }}"><i class="fa fa-plus">&nbsp;&nbsp;</i>Postuler à l'offre</a>
                                {% else %}
                                    <span class="blue"><i class="fa fa-info">&nbsp;&nbsp;</i>Vous avez postulé pour cette offre</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="thirteen wide column">
                            {{ offer.description|raw }}

                        </div>
                    </div>



                </div>
            </div>
        </div>

    {% endblock %}

    {% block customcss %}

        {% if randomHeaderColors %}
            <style>
                .generic-card header {
                    background: url("{{ asset('img/overlay.png') }}"), url("{{ asset('img/svg/header-bg.svg') }}"), linear-gradient(45deg, {{ generateColor() }} 20%, {{ generateColor() }} 80%) center, center, center;
                {% if isFullscreen|default(false) %} background-attachment: fixed; {% endif %}

                }

            </style>
        {% endif %}

    {% endblock %}

{% endembed %}